        {
            "name": "lambda-input-full",
            "description": "Complete input processing and formatting with all dependencies",
            "source_patterns": [
                "lambda/input/input*.cpp",
                "lambda/format/format*.cpp"
            ],
            "source_files": [
                "lambda/print.cpp", 
                "lambda/utf_string.cpp",
                "lambda/name_pool.cpp",
