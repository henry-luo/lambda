{
  "name": "xcolor",
  "version": "2.14",
  "description": "Driver-independent color extensions for LaTeX",
  "requires": ["latex_base"],
  
  "commands": {
    "color": {
      "type": "constructor",
      "params": "[]{}", 
      "description": "Switch to specified color",
      "pattern": "<color-switch model=\"#1\" color=\"#2\"/>"
    },
    "textcolor": {
      "type": "constructor",
      "params": "[]{}{}", 
      "description": "Typeset text in specified color",
      "pattern": "<span style=\"color:#2\">#3</span>"
    },
    "colorbox": {
      "type": "constructor",
      "params": "[]{}{}", 
      "description": "Box with colored background",
      "pattern": "<span style=\"background-color:#2\">#3</span>"
    },
    "fcolorbox": {
      "type": "constructor",
      "params": "[]{}{}{}", 
      "description": "Box with colored frame and background",
      "pattern": "<span style=\"border-color:#2;background-color:#3\">#4</span>"
    },
    "pagecolor": {
      "type": "primitive",
      "params": "[]{}", 
      "description": "Set page background color",
      "pattern": ""
    },
    "nopagecolor": {
      "type": "primitive",
      "params": "", 
      "description": "Remove page background color",
      "pattern": ""
    },
    "definecolor": {
      "type": "primitive",
      "params": "{}{}{}",
      "description": "Define a new color",
      "pattern": ""
    },
    "providecolor": {
      "type": "primitive",
      "params": "{}{}{}",
      "description": "Define color if not already defined",
      "pattern": ""
    },
    "colorlet": {
      "type": "primitive",
      "params": "[]{}[]{}",
      "description": "Define color as copy of another",
      "pattern": ""
    },
    "DefineNamedColor": {
      "type": "primitive",
      "params": "{}{}{}{}",
      "description": "Define named color in a color set",
      "pattern": ""
    },
    "rowcolors": {
      "type": "primitive",
      "params": "[]{}{}{}",
      "description": "Alternate row colors in tables",
      "pattern": ""
    },
    "extractcolorspec": {
      "type": "primitive",
      "params": "{}{}",
      "description": "Extract color specification",
      "pattern": ""
    },
    "extractcolorspecs": {
      "type": "primitive",
      "params": "{}{}{}",
      "description": "Extract color specifications",
      "pattern": ""
    },
    "convertcolorspec": {
      "type": "primitive",
      "params": "{}{}{}{}",
      "description": "Convert between color models",
      "pattern": ""
    }
  },
  
  "color_models": {
    "rgb": { "params": 3, "description": "Red, Green, Blue (0-1 each)" },
    "RGB": { "params": 3, "description": "Red, Green, Blue (0-255 each)" },
    "HTML": { "params": 1, "description": "HTML hex code (e.g., FF0000)" },
    "cmyk": { "params": 4, "description": "Cyan, Magenta, Yellow, Black (0-1 each)" },
    "cmy": { "params": 3, "description": "Cyan, Magenta, Yellow (0-1 each)" },
    "hsb": { "params": 3, "description": "Hue, Saturation, Brightness (0-1 each)" },
    "Hsb": { "params": 3, "description": "Hue (0-360), Saturation, Brightness (0-1)" },
    "HSB": { "params": 3, "description": "Hue, Saturation, Brightness (0-240 each)" },
    "gray": { "params": 1, "description": "Gray scale (0-1)" },
    "Gray": { "params": 1, "description": "Gray scale (0-15)" },
    "wave": { "params": 1, "description": "Wavelength in nm (363-814)" }
  },
  
