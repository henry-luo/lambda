{
    "name": "pdf-test-tools",
    "version": "1.0.0",
    "description": "Automated PDF testing tools for Radiant engine",
    "main": "test_radiant_pdf.js",
    "scripts": {
        "test": "node test_radiant_pdf.js",
        "test:basic": "node test_radiant_pdf.js --suite=basic",
