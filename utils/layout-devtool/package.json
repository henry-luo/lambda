{
    "name": "layout-devtool",
    "version": "0.1.0",
    "description": "Electron-based development tool for testing Lambda HTML/CSS layout engine",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
        "package": "electron-builder"
    },
    "keywords": [
        "electron",
        "layout",
        "testing",
        "lambda",
        "css",
        "html"
    ],
    "author": "Lambda Project",
    "license": "MIT",
    "dependencies": {
        "electron": "^28.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.0",
        "cross-env": "^7.0.3",
        "electron-builder": "^24.9.1",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.lambda.layout-devtool",
        "productName": "Layout DevTool",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "src/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        }
    }
}
